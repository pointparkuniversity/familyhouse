<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFAQ"
        android:layout_width="419dp"
        android:layout_height="131dp"
        android:backgroundTint="#d8bf49"
        android:text="@string/faq"
        android:textAlignment="center"
        android:textColor="#fffdf9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLinens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEvents" />

    <Button
        android:id="@+id/btnAlerts"
        android:layout_width="423dp"
        android:layout_height="133dp"
        android:backgroundTint="#e26666"
        android:text="@string/alerts"
        android:textAlignment="center"
        android:textColor="#fffdf9"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings" />

    <Button
        android:id="@+id/btnLinens"
        android:layout_width="420dp"
        android:layout_height="132dp"
        android:backgroundTint="#6fd1be"
        android:text="@string/linens"
        android:textAlignment="center"
        android:textColor="#fffdf9"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEvents"
        android:layout_width="418dp"
        android:layout_height="122dp"
        android:backgroundTint="#39b4d1"
        android:text="@string/events"
        android:textAlignment="center"
        android:textColor="#fffdf9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFAQ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlerts" />

    <Button
        android:id="@+id/btnSettings"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="426dp"
        android:layout_height="112dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#474545"
        android:text="@string/settingsbutton"
        android:textColor="#fffdf9"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textDirection="firstStrongRtl"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toTopOf="@+id/btnAlerts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>